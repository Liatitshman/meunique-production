{
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/index" }
  ],
  "functions": {
    "api/index.py": {
      "includeFiles": "**"
    }
  },
  "env": {
    "STREAMLIT_SERVER_HEADLESS": "true",
    "STREAMLIT_SERVER_PORT": "8501",
    "STREAMLIT_SERVER_ADDRESS": "0.0.0.0"
  },
  "buildCommand": "pip install -r requirements.txt",
  "outputDirectory": ".",
  "alias": ["meunique.io", "www.meunique.io"]
} 